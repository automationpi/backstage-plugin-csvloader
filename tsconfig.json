{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "strict": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
